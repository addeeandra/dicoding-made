<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    tools:layout_margin="16dp"
    tools:style="@style/CardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_movie_preview"
            android:layout_width="112dp"
            android:layout_height="160dp"
            android:layout_marginEnd="16dp"
            android:background="#f0f0f0"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_movie_preview"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Captain America Civil War" />

        <TextView
            android:id="@+id/tv_movie_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_title"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/iv_movie_preview"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            android:textSize="14sp"
            tools:text="Following the events of amazing world we conducted to amazing world we conducted to amazing world we conducted to" />

        <TextView
            android:id="@+id/tv_movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_overview"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/iv_movie_preview"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="Wednesday, Apr 27, 2018" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_date"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_movie_preview"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/btn_detail"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_movie_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/btn_share"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>